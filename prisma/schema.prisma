datasource db {
  provider = "sqlite"
  url      = "file:dev.db"
}

generator client {
  // Corresponds to the cargo alias created earlier
  provider = "cargo prisma"
  // The location to generate the schema. Is relative to the position of the schema
  output   = "../core/src/prisma.rs"
}

model WhiteboardItem {
  id           Int         @id @default(autoincrement())
  item_type    String
  value        String
  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt
  Whiteboard   Whiteboard? @relation(fields: [whiteboardId], references: [id])
  whiteboardId Int?
}

model Whiteboard {
  id              Int              @id @default(autoincrement())
  name            String
  description     String
  whiteboardItems WhiteboardItem[]
  Spaces          Spaces[]
}

model Notes {
  id         Int       @id @default(autoincrement())
  title      String
  content    String
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
  spaceId    Spaces    @relation(fields: [spacesId], references: [id])
  spacesId   Int
  Journals   Journals? @relation(fields: [journalsId], references: [id])
  journalsId Int?
}

model Journals {
  id       Int     @id @default(autoincrement())
  notes    Notes[]
  title    String
  Spaces   Spaces? @relation(fields: [spacesId], references: [id])
  spacesId Int?
}

model Spaces {
  id           Int        @id @default(autoincrement())
  name         String
  whiteboard   Whiteboard @relation(fields: [whiteboardId], references: [id])
  whiteboardId Int
  Notes        Notes[]
  journals     Journals[]
}

model Settings {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  value     String
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt
}
