// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "cargo run --bin prisma"
  output   = "../packages/core/prisma/src/lib.rs"
}

datasource db {
  provider = "sqlite"
  url      = "sqlite:./file.db"
}

model Migration {
  id            Int      @id @default(autoincrement())
  name          String
  checksum      String   @unique
  steps_applied Int      @default(0)
  applied_at    DateTime @default(now())

  @@map("_migrations")
}

model Spaces {
  id          Int        @id @default(autoincrement())
  name        String     @unique
  description String
  icon        String
  color       String
  index       Int        @default(0)
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @default(now()) @updatedAt
  Elements    Elements[]

  @@map("spaces")
}

model Elements {
  id          Int      @id @default(autoincrement())
  elementType String // LINK, IMAGE, VIDEO, AUDIO, TEXT, CODEBLOCK, README, NOTE, FILE
  content     String
  space       Spaces   @relation(fields: [spacesId], references: [id])
  positionX   Int      @default(0)
  positionY   Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @default(now()) @updatedAt
  spacesId    Int

  @@map("elements")
}
