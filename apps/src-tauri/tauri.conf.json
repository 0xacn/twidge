{
	"build": {
		"beforeBuildCommand": "",
		"beforeDevCommand": "",
		"devPath": "http://localhost:3000",
		"distDir": "../web/dist"
	},
	"package": {
		"productName": "Twidge",
		"version": "0.1.0"
	},
	"tauri": {
		"systemTray": {
			"iconPath": "icons/icon.png",
      		"iconAsTemplate": true
    	},
		"allowlist": {
			"all": true,
			"globalShortcut": {
				"all": true
			}
		},
		"bundle": {
			"active": true,
			"category": "DeveloperTool",
			"copyright": "",
			"deb": {
				"depends": []
			},
			"externalBin": [],
			"icon": ["icons/128x128@2x.png", "icons/icon.icns", "icons/icon.ico"],
			"identifier": "com.twidge.vpotti.me",
			"longDescription": "",
			"macOS": {
				"entitlements": null,
				"exceptionDomain": "",
				"frameworks": [],
				"providerShortName": null,
				"signingIdentity": null
			},
			"resources": [],
			"shortDescription": "",
			"targets": "all",
			"windows": {
				"certificateThumbprint": null,
				"digestAlgorithm": "sha256",
				"timestampUrl": ""
			}
		},
		"security": {
			"csp": null
		},
		"updater": {
			"active": false
		},
		"windows": [
			{
				"fullscreen": false,
				"height": 800,
				"resizable": true,
				"title": "Twidge",
				"width": 1200
			}
		]
	}
}
